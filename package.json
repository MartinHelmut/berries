{
  "name": "@berries/root",
  "version": "1.0.0",
  "description": "Helper and tools to speed up and support your daily developer workflow. Pick your berries!",
  "author": "Martin Helmut Fieber <info@martin-fieber.de> (http://martin-fieber.de)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "commit": "node node_modules/@commitlint/prompt-cli/cli.js",
    "commitmsg": "node node_modules/@commitlint/cli/lib/cli.js -e $GIT_PARAMS",
    "precommit": "lint-staged",
    "publish": "lerna publish --conventional-commits",
    "lint:js": "lerna exec --parallel -- eslint '**/*.js'",
    "lint:css": "lerna exec --parallel -- stylelint 'src/*.css'",
    "test": "cross-env NODE_ENV=development lerna exec --parallel -- jest",
    "test:coverage": "cross-env NODE_ENV=development lerna exec -- jest --coverage src && cat ./coverage/lcov.info | coveralls",
    "fmt:check": "prettier --list-different \"**/*.{js,css,md,json}\"",
    "postinstall": "lerna bootstrap"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "lint-staged": {
    "*.{js,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "7.2.0",
    "@commitlint/config-angular": "7.1.2",
    "@commitlint/config-conventional": "7.1.2",
    "@commitlint/config-lerna-scopes": "7.1.2",
    "@commitlint/prompt-cli": "7.2.0",
    "babel-jest": "23.6.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "coveralls": "3.0.2",
    "cross-env": "5.2.0",
    "enzyme": "3.7.0",
    "enzyme-adapter-react-16": "1.6.0",
    "eslint": "5.6.1",
    "eslint-config-prettier": "3.1.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-react": "7.11.1",
    "execa": "1.0.0",
    "husky": "1.1.1",
    "jest": "23.6.0",
    "lerna": "3.4.1",
    "lint-staged": "7.3.0",
    "prettier": "1.14.3",
    "react-test-renderer": "16.5.2",
    "serve": "10.0.2",
    "stylelint": "9.6.0",
    "stylelint-config-standard": "18.2.0"
  }
}
