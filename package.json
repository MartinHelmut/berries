{
  "name": "@berries/root",
  "version": "1.0.0",
  "description": "Helper and tools to speed up and support your daily developer workflow. Pick your berries!",
  "author": "Martin Helmut Fieber <info@martin-fieber.de> (http://martin-fieber.de)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "commit": "node node_modules/@commitlint/prompt-cli/cli.js",
    "publish": "lerna publish --conventional-commits",
    "lint:js": "lerna exec --parallel -- eslint '**/*.js'",
    "lint:css": "lerna exec --parallel -- stylelint 'src/*.css'",
    "test": "cross-env NODE_ENV=development lerna exec --parallel -- jest",
    "test:coverage": "cross-env NODE_ENV=development lerna exec -- jest --coverage src && cat ./coverage/lcov.info | coveralls",
    "fmt:check": "prettier --list-different \"**/*.{js,css,md,json}\"",
    "postinstall": "lerna bootstrap"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "lint-staged": {
    "*.{js,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-class-properties": "7.2.3",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/preset-env": "7.2.3",
    "@babel/preset-react": "7.0.0",
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-angular": "7.1.2",
    "@commitlint/config-conventional": "7.1.2",
    "@commitlint/config-lerna-scopes": "7.2.1",
    "@commitlint/prompt-cli": "7.2.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "23.6.0",
    "babel-plugin-styled-components": "1.10.0",
    "coveralls": "3.0.2",
    "cross-env": "5.2.0",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.7.1",
    "eslint": "5.11.0",
    "eslint-config-prettier": "3.3.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-react": "7.12.0",
    "execa": "1.0.0",
    "husky": "1.3.1",
    "jest": "23.6.0",
    "lerna": "3.8.1",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3",
    "react-test-renderer": "16.7.0",
    "regenerator-runtime": "0.13.1",
    "serve": "10.1.1",
    "stylelint": "9.9.0",
    "stylelint-config-standard": "18.2.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "node node_modules/@commitlint/cli/lib/cli.js -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
