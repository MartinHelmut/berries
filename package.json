{
  "name": "@berries/root",
  "version": "1.0.0",
  "description": "Helper and tools to speed up and support your daily developer workflow. Pick your berries!",
  "author": "Martin Helmut Fieber <info@martin-fieber.de> (http://martin-fieber.de)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "commit": "node node_modules/@commitlint/prompt-cli/cli.js",
    "commitmsg": "node node_modules/@commitlint/cli/lib/cli.js -e $GIT_PARAMS",
    "precommit": "lint-staged",
    "publish": "lerna publish --conventional-commits",
    "lint": "lerna exec --parallel -- eslint '**/*.js'",
    "test": "cross-env NODE_ENV=development lerna exec --parallel -- jest",
    "test:coverage": "cross-env NODE_ENV=development lerna exec -- jest --coverage src && cat ./coverage/lcov.info | coveralls",
    "fmt:check": "lerna exec --parallel -- prettier --list-different 'src/**/*.js'",
    "postinstall": "lerna bootstrap"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "lint-staged": {
    "*.{js,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 8
    },
    "env": {
      "node": true,
      "jest": true,
      "es6": true
    }
  },
  "prettier": {
    "tabWidth": 4,
    "singleQuote": true
  },
  "jest": {
    "testEnvironment": "node"
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "dependencies": {
      "semanticPrefix": "chore:",
      "semanticCommitScope": ""
    },
    "pin": {
      "semanticPrefix": "chore:",
      "semanticCommitScope": ""
    },
    "semanticPrefix": "chore:",
    "semanticCommitScope": ""
  },
  "devDependencies": {
    "@commitlint/cli": "6.1.0",
    "@commitlint/config-angular": "6.1.0",
    "@commitlint/config-conventional": "6.1.0",
    "@commitlint/config-lerna-scopes": "6.1.0",
    "@commitlint/prompt-cli": "6.1.0",
    "coveralls": "3.0.0",
    "cross-env": "5.1.3",
    "eslint": "4.17.0",
    "eslint-config-prettier": "2.9.0",
    "execa": "0.9.0",
    "husky": "0.14.3",
    "jest": "22.3.0",
    "lerna": "2.9.0",
    "lint-staged": "6.1.1",
    "prettier": "1.10.2",
    "serve": "6.4.9"
  }
}
